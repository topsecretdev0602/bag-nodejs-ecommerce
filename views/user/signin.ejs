<%- include ../partials/header %> <%- include ../partials/categoriesNavbar %>

<div class="container">
  <div class="row">
    <div class="col-md-8 m-auto">
      <h1 class="mt-4 mb-4">Sign In Page</h1>
      <!-- Flash message -->
      <% if(messages.length>0) {%>
      <div id="flash-msg" class="alert alert-danger">
        <% messages.forEach((message) => { %>
        <p>
          <%=message %>
        </p>
        <%}) %>
      </div>
      <%}%>
      <form action="/user/signin" method="POST">
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" name="email" id="email" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
          />
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button type="submit" class="btn btn-primary button-style">
          Sign In
        </button>
        <!-- CSRF used to prevent another browser stealing token from another browser -->
      </form>
      <p class="mt-3">
        Don't have an account? <a href="/user/signup"> Sign Up!</a>
      </p>
    </div>
  </div>
</div>

<%- include ../partials/footer %>
